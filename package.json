{
	"name": "n8n-nodes-lettr",
	"version": "0.1.3",
	"description": "n8n community node for Lettr transactional email APIs",
	"keywords": [
		"n8n-community-node-package",
		"n8n",
		"lettr",
		"email"
	],
	"license": "MIT",
	"homepage": "https://docs.lettr.com",
	"author": {
		"name": "lettr-com",
		"email": "support@lettr.com"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/lettr-com/lettr-n8n.git"
	},
	"bugs": {
		"url": "https://github.com/lettr-com/lettr-n8n/issues"
	},
	"engines": {
		"node": ">=20.15"
	},
	"main": "index.js",
	"scripts": {
		"sync:logo": "cp assets/logo.svg nodes/Lettr/lettr.svg",
		"build": "npm run sync:logo && npx rimraf dist && tsc && gulp build:icons",
		"dev": "tsc --watch",
		"format": "prettier nodes credentials --write",
		"lint": "eslint --ext .ts nodes credentials",
		"lint:fix": "eslint --ext .ts nodes credentials --fix",
		"check": "npx @n8n/scan-community-package n8n-nodes-lettr",
		"prepublishOnly": "npm run build && npm run lint"
	},
	"files": [
		"dist"
	],
	"n8n": {
		"n8nNodesApiVersion": 1,
		"credentials": [
			"dist/credentials/LettrApi.credentials.js"
		],
		"nodes": [
			"dist/nodes/Lettr/Lettr.node.js"
		]
	},
	"devDependencies": {
		"@typescript-eslint/parser": "~8.32.0",
		"eslint": "^8.57.0",
		"eslint-plugin-n8n-nodes-base": "^1.16.3",
		"gulp": "^5.0.0",
		"prettier": "^3.5.3",
		"rimraf": "^6.0.1",
		"typescript": "^5.8.2"
	},
	"peerDependencies": {
		"n8n-workflow": "*"
	}
}
